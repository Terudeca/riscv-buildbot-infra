{
    "name": "rocket-chip",
    "url": "git@github.com:ucb-bar/rocket-chip.git",

    "configurations": [
        {
            "name": "rocket-chip @config@",
            "parameters": [
                {
                    "pattern": "@config@",
                    "values": ["DefaultCPPConfig", "ExampleSmallConfig"]
                }
            ],
            "steps": [
               {
	           "name": "submodules",
                   "command": ["make", "submodules", "-C", "regression", "CONFIG=@config@"]
               },
               {
	           "name": "tools",
                   "command": ["make", "tools", "-C", "regression", "CONFIG=@config@"]
               },
               {
	           "name": "vsim",
                   "command": ["make", "vsim", "-C", "regression", "CONFIG=@config@"]
               },
               {
	           "name": "vsim-asm-tests",
                   "command": ["make", "vsim-asm-tests", "-C", "regression", "CONFIG=@config@"]
               },
               {
	           "name": "vsim-bmark-tests",
                   "command": ["make", "vsim-bmark-tests", "-C", "regression", "CONFIG=@config@"]
               },
               {
	           "name": "regression",
                   "command": ["make", "-C", "regression", "CONFIG=@config@"]
               }
           ]
        }
    ]
}
